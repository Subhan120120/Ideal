@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Products List</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Buy</th>
        </tr>
        @foreach (var item in ViewBag.menuItems)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.MenuItemName</td>
                <td><img src="../Uploads/Images/@item.ImagePath" width="60" /> </td>
                <td>@item.Price</td>
                <td align="center">
                    <a asp-controller="ShoppingCart" asp-action="Buy" asp-route-id="@item.Id">Buy Now</a>
                </td>
            </tr>
        }
    </table>

</body>
</html>