@section Styles{
    <link href="~/coffee/css/parallax-scrolling.css" rel="stylesheet" />
    <link href="~/npm/intl-tel-input/build/css/intlTelInput.css" rel="stylesheet" />
    <link href="~/npm/toastr/build/toastr.min.css" rel="stylesheet" />
    <style>
        #phoneLabel {
            padding-left: 35px !important;
        }
    </style>
}

@section Scripts{
    <script src="~/coffee/js/parallax-scrolling.js"></script>
    <script src="~/npm/intl-tel-input/build/js/intlTelInput.min.js"></script>
    <script src="~/npm/toastr/build/toastr.min.js"></script>
    <script src="~/js/site.js"></script>  <!--toastra gore-->

    <script>
        function getSelectValue(sended) {
            if (typeof sended !== 'undefined') {
                var slctdIndx = sended.selectedIndex;
                var highlight = document.getElementsByClassName("highlight");
                for (var i = 0; i < highlight.length; i++) {
                    if (i == slctdIndx) {
                        highlight.item(i).classList.remove("jello-horizontal");
                        highlight.item(i).classList.add("jello-horizontal");
                    }
                    else {
                        highlight.item(i).classList.remove("jello-horizontal");
                    }
                }
            }
        }
        getSelectValue();
    </script>

    <script>
        if ("@ViewBag.Notify" == "Success")
            toastr["success"]("Rezervasiyanız Qeydə Alındı", "Təşəkkürlər!")
        else if ("@ViewBag.Notify" == "Error")
            toastr["error"]("Rezervasiyanız Qeydə Alınmaddı", "Xəta!")
    </script>

    <script>
        $("#phone").intlTelInput({
            initialCountry: "az",
            nationalMode: true,
        });
    </script>

}