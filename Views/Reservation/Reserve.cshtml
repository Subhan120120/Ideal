        </div>
    </div>
</section>

<section class="ftco-about d-md-flex">
    <div class="one-half ">
        <div class="ftco-animate booking-form">
            <form asp-action="Reserve" asp-controller="Reservation" name="subform" method="post" autocomplete="off">
                <div class="form-group">
                    <input type="hidden" asp-for="Reservation.Id" />
                </div>
                <div class="form-group">
                    <div class="form-checkbox">
                        <label for="radio1">
                            <input type="radio" id="radio1" name="Smoking">
                            <span></span>Smoking
                        </label>
                        <label for="radio2">
                            <input type="radio" id="radio2" name="Smoking">
                            <span></span>Non-smoking
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input asp-for="Reservation.Name" class="form-control">
                    <label asp-for="Reservation.Name" class="form-label"></label>
                    <span asp-validation-for="Reservation.Name"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Reservation.PhoneNumber" type="tel" id="phone" class="form-control">
                    <label asp-for="Reservation.PhoneNumber" id="phoneLabel" class="form-label"></label>
                    <span asp-validation-for="Reservation.PhoneNumber"></span>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input asp-for="Reservation.StartTime" class="form-control">
                            <label asp-for="Reservation.StartTime" class="form-label"></label>
                            <span asp-validation-for="Reservation.StartTime"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input asp-for="Reservation.NumberOfGuest" class="form-control" />
                            <label asp-for="Reservation.NumberOfGuest" class="form-label"></label>
                            <span asp-validation-for="Reservation.NumberOfGuest"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <select asp-for="Reservation.DineInTableGroupId" class="form-control" asp-items="ViewBag.TblGrp"></select>
                            <span class="select-arrow"></span>
                            <label asp-for="Reservation.DineInTableGroupId" class="form-label"></label>
                            <span asp-validation-for="Reservation.DineInTableGroupId"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <select asp-for="Reservation.DineInTableId" class="form-control" asp-items="ViewBag.DnInTbl"></select>
                            <span class="select-arrow"></span>
                            <label asp-for="Reservation.DineInTableId" class="form-label"></label>
                            <span asp-validation-for="Reservation.DineInTableGroupId"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="REZERV ET" class="float-right btn btn-primary btn-outline-primary px-4 py-3" />
                </div>
            </form>
        </div>

    </div>
    <div class="one-half img" style="background-image: url('/coffee/images/IMG_9221.jpg');"></div>
</section>

