

@model List<MenuItemGroup>


<section class="ftco-section">
    <div class="container">
        <div class="row">

            @foreach (var group in Model)
            {
                if (group.menuItems.Any())
                {


                    <div class="col-md-6 mb-5 pb-3">
                        <h3 class="mb-5 heading-pricing ftco-animate">@group.MenuItemGroupText</h3>
                        @foreach (var item in group.menuItems)
                        {
                            <div class="pricing-entry d-flex ftco-animate">
                                <div class="img" style="background-image: url('../Uploads/Images/@item.ImagePath');"></div>
                                <div class="desc pl-3">
                                    <a href="#@item.Id">
                                        <div class="d-flex text align-items-center">
                                            <h3><span>@item.MenuItemText</span></h3>
                                            <span class="price">@item.Price ₼</span>
                                        </div>
                                        <div class="d-block">
                                            <p>@item.MenuItemDescription</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>
</section>



<section class="ftco-section">
    <div class="d-flex flex-wrap">
        @foreach (var group in Model)
        {
            @foreach (var item in group.menuItems)
            {
                <div class="ftco-animate col-lg-6 col-md-10 col-11 mx-auto" id="@item.Id">
                    <div class=" card mb-3">
                        <div class="row no-gutters ">
                            <div style="background-image:url(../Uploads/Images/@item.ImagePath)" class=" card-custom col-md-8  img-top overflow-hidden">
                            </div>
                            <div class="col-md-4  ">
                                <div class="card-body outerdiv">
                                    <h5 class="card-title">@item.MenuItemText</h5>
                                    <p class="card-text">@item.MenuItemDescription</p>
                                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</section>

