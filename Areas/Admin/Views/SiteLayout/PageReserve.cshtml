@model List<AppDetail>

<h1 class="h3 mb-4 text-gray-800">Sayt Düzəni</h1>
<hr />
<form asp-action="PageReserve" method="post">
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="col-lg-6">
                <div class="card shadow mb-4 p-0">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">@Model[i].WebTitle</h6>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].WebTitle" />
                        <div class="form-group">
                            <label asp-for="@Model[i].Heading" class="control-label"></label>
                            <div class="input-container">
                                <img class="icon" src="~/coffee/svg-icon/T1.svg" />
                                <input asp-for="@Model[i].Heading" class="form-control input-field" />
                            </div>
                            <span asp-validation-for="@Model[i].Heading" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model[i].SubHeading" class="control-label"></label>
                            <div class="input-container">
                                <img class="icon" src="~/coffee/svg-icon/T2.svg" />
                                <input asp-for="@Model[i].SubHeading" class="form-control input-field" />
                            </div>
                            <span asp-validation-for="@Model[i].SubHeading" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model[i].Description" class="control-label"></label>
                            <div class="input-container">
                                <img class="icon" src="~/coffee/svg-icon/T3.svg" />
                                <textarea asp-for="@Model[i].Description" class="form-control input-field"></textarea>
                            </div>
                            <span asp-validation-for="@Model[i].Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="@Model[i].WebTitle Yadda Saxla" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>

